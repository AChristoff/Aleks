{{> header}}

<div class="container array">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <h2 style="text-align: center">Login</h2>
            <br>
            <form action="#/login" method="POST">
                <fieldset>
                    <div class="form-group">
                        <label for="loginUsername">Username *</label>
                        <input type="text" name="username" class="form-control" id="loginUsername" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="loginPassword">Password *</label>
                        <input type="password" name="password" class="form-control" id="loginPassword" placeholder="">
                    </div>
                    <br>
                    <div style="text-align: center">
                    <button type="submit" class="btn btn-outline-primary">Login</button>
                    </div>
                </fieldset>
            </form>
            <script>loginValidation()</script>
        </div>
        <div class="col-4"></div>
    </div>
</div>

{{> footer}}