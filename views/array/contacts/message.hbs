{{> header}}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<div class="container array">
    <div class="row">
        <div class="col-3"></div>

        <div class="col-6">
            <h2 style="margin-bottom: 20px; text-align: center">Contact the source</h2>
            <br>
            <form method="POST" action="">

                <div class="form-group">
                    <label for="inputName">Name *</label>
                    <input type="text" name="name" class="form-control" id="inputNam">
                </div>

                <div class="form-group">
                    <label for="inputEmail">Email *</label>
                    <input type="email" name="email" class="form-control" id="inputEmail">
                </div>

                <div class="form-group">
                    <label for="inputMessage">Message *</label>
                    <textarea name="message" class="form-control" id="inputMessage" rows="7"></textarea>
                </div>
                <div style="margin-top: 35px" class="g-recaptcha" data-sitekey="6Lc6MqIUAAAAAPMkwoDPvX1s_3JTXoYnbMWUDFS0"></div>
                <div style="text-align: center; margin: 35px">
                    <button name="submit" type="submit" class="btn btn-outline-primary">Submit</button>
                </div>

            </form>

        </div>

    </div>
</div>

{{> footer}}